current_dir = os.path.dirname(os.path.realpath(__file__))

env_dir = f"{current_dir}/{{ repo_name }}/env"

def replace_template_dir(env: str, env_dir: str):
    content = ""
    
    with open(f"{env_dir}/{env}.env", "r") as fi:
        content = fi.read()
        content = content.replace("$$template_directory$$", current_dir)

    with open(f"{env_dir}/{env}.env", "w") as fi:
        fi.write(content)
        
replace_template_dir("exp", env_dir)
